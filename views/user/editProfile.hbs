<link rel="stylesheet" href="/stylesheets/user/editProfile.css" />

<div class="edit-profile">
    <h1>EDIT PROFILE</h1>
    <form action="/editprofile" method="post" enctype="multipart/form-data">
        <label for="username">Username <span class="italic-text">*required</span></label>
        <input id="username" type="text" name="username" value="{{user.username}}">

        <label for="first-name">First name <span class="italic-text">*required</span></label>
        <input id="first-name" type="text" name="firstName" value="{{user.firstName}}">

        <label for="last-name">Last name <span class="italic-text">*required</span></label>
        <input id="last-name" type="text" name="lastName" value="{{user.lastName}}">

        <label for="email-address">E-mail address <span class="italic-text">*required</span></label>
        <input id="email-address" type="text" name="email" value="{{user.email}}">

        <label for="password">Password <span class="italic-text">*required</span></label>
        <input id="password" type="password" name="password" value="" placeholder="******" >

        <label for="input-profile-picture">Profile picture</label>
        {{#if user.profilePicture}}
            <div class="profile-picture"><img src="images/avatar-icon-vector.jpg" alt=""></div>
        {{/if}}
        <input type="file" id="input-profile-picture" name="profilePicture">

        <button type="submit">Update profile!</button>
    </form>
</div>