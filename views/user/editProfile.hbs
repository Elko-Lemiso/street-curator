<link rel="stylesheet" href="/stylesheets/user/signup.css" />

<div class="sign-up">
    <h1>EDIT PROFILE</h1>
    <form action="/signup" method="post" enctype="multipart/form-data">
        <label for="username">Username <span class="italic-text">*required</span></label>
        <input id="username" type="text" name="username" value="{{}}">

        <label for="first-name">First name <span class="italic-text">*required</span></label>
        <input id="first-name" type="text" name="firstName" value="{{}}">

        <label for="last-name">Last name <span class="italic-text">*required</span></label>
        <input id="last-name" type="text" name="lastName" value="{{}}">

        <label for="email-address">E-mail address <span class="italic-text">*required</span></label>
        <input id="email-address" type="text" name="email" value="{{}}">

        <label for="password">Password <span class="italic-text">*required</span></label>
        <input id="password" type="password" name="password" value="{{}}">

        <label for="user-type">User type <span class="italic-text">*required</span></label>
        {{#if user.userType.tourist}}
            <div class="form-radio">
                <input type="radio" id="tourist" name="userType" value="tourist" checked="checked">
                <label for="tourist">Tourist</label>
            </div>
            <div class="form-radio">
                <input type="radio" id="artist" name="userType" value="artist">
                <label for="artist">Artist</label>
            </div>
            {{else}}
            <div class="form-radio">
                <input type="radio" id="tourist" name="userType" value="tourist">
                <label for="tourist">Tourist</label>
            </div>
            <div class="form-radio">
                <input type="radio" id="artist" name="userType" value="artist" checked="checked">
                <label for="artist">Artist</label>
            </div>
        {{/if}}

        <label for="input-profile-picture">Profile picture</label>
        <input type="file" id="input-profile-picture" name="profilePicture">

        <button type="submit">Edit profile!</button>
    </form>
</div>